<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.ualberta.cs.team1travelexpenseapp.EditExpenseActivity" >
    
	<TextView
        android:id="@+id/destinationNameHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Destination:"
        android:textAppearance="?android:attr/textAppearanceMedium" />
	
   	<EditText
	    android:id="@+id/destinationNameBody"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/destinationNameHeader"
	    android:layout_toLeftOf="@+id/addDestinationButton"
	    android:inputType="textAutoCorrect" />
   	
   	<TextView
        android:id="@+id/destinationReasonHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/destinationNameBody"
        android:text="Reason:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/destinationReasonBody"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/destinationReasonHeader"
        android:inputType="textAutoCorrect" />
    
    <Button
        android:id="@+id/selectLocationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Location"
        android:onClick="onAddDestinationLocationClick"
        android:layout_below="@+id/destinationReasonBody"
        android:textSize="10sp" />
    
</RelativeLayout>
